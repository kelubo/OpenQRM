import sys
import os
from oqlibcloudstorage import *

def main(argv):
	cmdline = openqrm_lc_parse_cmdline(argv)
	#print cmdline
	if cmdline['BUCKET_NAME'] == '':
		print "Bucket name empty"
		sys.exit(1)
	if cmdline['FILE_PATH'] == '':
		print "File-path empty"
		sys.exit(1)
	if not os.path.exists(cmdline['FILE_PATH']):
		print "File %s does not exists" % cmdline['FILE_PATH']
		sys.exit(1)
	conn = openqrm_lc_get_connection(cmdline)
	try:
		container = conn.get_container(container_name=cmdline['BUCKET_NAME'])
	except ContainerDoesNotExistError:
		print "Bucket %s does not exist" % (cmdline['BUCKET_NAME'])
		sys.exit(1)

	if conn.upload_object(file_path=cmdline['FILE_PATH'], container=container, object_name=os.path.basename(cmdline['FILE_PATH'])):
		#conn.ex_enable_static_website(container=container)
		#conn.enable_container_cdn(container=container)
		#file_url = conn.get_container_cdn_url(container=container)
		print "Uploaded %s to bucket %s" % (cmdline['FILE_PATH'], cmdline['BUCKET_NAME'])
	else:
		print "Error uploading %s to bucket %s" % (cmdline['FILE_PATH'], cmdline['BUCKET_NAME'])
		sys.exit(1)






if __name__ == "__main__":
	main(sys.argv[1:])



