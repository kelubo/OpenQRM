export OPENVSWITCH=@@OPENQRM_PLUGIN_KVM_BRIDGE@@
export PATH=/usr/sbin:/usr/bin:/sbin:/bin

# remove the tap dev
ifconfig $1 0.0.0.0 down
ovs-vsctl del-port ${OPENVSWITCH} $1

